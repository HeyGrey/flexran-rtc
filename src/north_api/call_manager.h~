#ifndef CALL_MANAGER_H_
#define CALL_MANAGER_H_

#include <pistache/endpoint.h>
#include <pistache/http.h>
#include <pistache/router.h>

#include "flexible_scheduler.h"

namespace flexran {

  namespace north_api {

    namespace manager {

      class call_manager {

      public:

      call_manager(Net::Address addr, std::shared_ptr<flexran::app::scheduler::flexible_scheduler> flex_sched)
	  : httpEndpoint(std::make_shared<Net::Http::Endpoint>(addr))
	  {
	    sched_app = flex_sched;	    
	  }

	void init(size_t thr = 1);

	void start();

	void shutdown();
	
      private:

	void setup_routes();

	void change_scheduler(const Net::Rest::Request& request, Net::Http::ResponseWriter response);
	
	std::shared_ptr<Net::Http::Endpoint> httpEndpoint;

	std::shared_ptr<flexran::app::scheduler::flexible_scheduler> sched_app;
	
	Net::Rest::Router router;
      };
      
    }
    
  }
  
}

#endif /* CALL_MANAGER_H_ */
